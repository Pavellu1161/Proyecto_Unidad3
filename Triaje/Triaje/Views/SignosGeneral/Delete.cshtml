@model Triaje.Models.TriajeGeneral.Signo

@{
    ViewData["Title"] = "Delete";
}

<h4 class="" style="font-family:Vogue; text-decoration:underline; text-align:center; color:brown;">Eliminar Signo</h4>
<h4 style="font-family:Garamond; color:brown;" >¿Esta seguro de eliminar este signo?</h4>
<div>
    <hr />
    <dl class="row" style="font-family:Garamond">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-2">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TipoPrioridades)
        </dt>
        <dd class = "col-sm-2">
            @Html.DisplayFor(model => model.TipoPrioridades.IdPrioridadGeneral)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TipoSignos)
        </dt>
        <dd class = "col-sm-2">
            @Html.DisplayFor(model => model.TipoSignos.IdTipoSignoGeneral)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdSignoGeneral" />
        <input type="submit" value="Eliminar" class="btn text-light" style="font-family: Vogue; background-color:brown;" />
        <a class="btn text-light" style="font-family: Vogue; background-color:brown;" asp-action="Index">Regresar</a>
    </form>
</div>
