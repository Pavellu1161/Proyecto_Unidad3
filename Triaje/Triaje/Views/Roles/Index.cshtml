@model IEnumerable<Triaje.Models.Rol>

@{
    ViewData["Title"] = "Index";
}

<h2 class="bg-dark" style="color:orange; font-family:Vogue; text-align:center; text-decoration:underline">Roles</h2>
<p>
    <a class="btn bg-dark" style="font-family: Vogue; color: orange;" asp-action="Create">Crear Rol</a>
</p>
<div class="row">
    <div class="col-12">
        <table class="table" style="font-family:Garamond">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.IdRol)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NombreRol)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.IdRol)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NombreRol)
                        </td>
                        <td>
                            <a class="btn bg-dark btn-sm" style="font-family: Vogue; color: orange;" asp-action="Edit" asp-route-id="@item.IdRol">Editar</a>
                            <a class="btn bg-dark btn-sm" style="font-family: Vogue; color: orange;" asp-action="Details" asp-route-id="@item.IdRol">Detalles</a>
                            <a class="btn bg-dark btn-sm" style="font-family: Vogue; color: orange;" asp-action="Delete" asp-route-id="@item.IdRol">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
