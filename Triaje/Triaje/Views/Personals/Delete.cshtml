@model Triaje.Models.Personal

@{
    ViewData["Title"] = "Delete";
}

<h4 class="bg-dark" style="color:orange; font-family:Vogue; text-align:center; text-decoration:underline">Eliminar Empleado</h4>

<h4 style="color: orange; font-family: Garamond;">¿Esta seguro de eliminar este empleado?</h4>
<div>
    <hr />
    <dl class="row" style="font-family:Garamond">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdentidadPersonal)
        </dt>
        <dd class="col-sm-2">
            @Html.DisplayFor(model => model.IdentidadPersonal)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NombresPersonal)
        </dt>
        <dd class="col-sm-2">
            @Html.DisplayFor(model => model.NombresPersonal)
        </dd>
        <dt class="col-4"></dt>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Rol)
        </dt>
        <dd class="col-sm-2">
            @Html.DisplayFor(model => model.Rol.NombreRol)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ApellidosPersonal)
        </dt>
        <dd class="col-sm-2">
            @Html.DisplayFor(model => model.ApellidosPersonal)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdentidadPersonal" />
        <input type="submit" value="Eliminar" class="btn btn-danger" style="font-family:Vogue;" /> 
        <a class="btn bg-dark" style="font-family:Vogue; color:orange" asp-action="Index">Regresar</a>
    </form>
</div>
